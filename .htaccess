# Set MIME types for JavaScript and CSS files
AddType application/javascript .js
AddType text/css .css

# Cache control - prevent caching of HTML files (if mod_headers is enabled)
<IfModule mod_headers.c>
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>

RewriteEngine On

# Force HTTPS redirect (if not already HTTPS)
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://leftoverhero.com/$1 [R=301,L]

# Don't rewrite if file exists (static assets)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Don't rewrite if directory exists
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Don't rewrite assets directory
RewriteCond %{REQUEST_URI} ^/assets/
RewriteRule ^ - [L]

# Don't rewrite static file extensions
RewriteCond %{REQUEST_URI} \.(js|mjs|css|map|svg|png|jpg|jpeg|gif|ico|woff|woff2|ttf|eot|json)$ [NC]
RewriteRule ^ - [L]

# Rewrite everything else to index.html for SPA routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]
